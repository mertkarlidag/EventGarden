@model List<CategoryListDTO>
@{
    Layout = "_Layout";
}
<div class="my-3">
    <a asp-action="Create"><i class="fa-solid fa-plus"></i></a>
</div>
<table class="table table-hover">
    <thead class="table-dark">
        <tr>
            <th>Adı</th>
            <th>Güncelle</th>
            <th>Sil</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td><a asp-action="Update" asp-controller="Category" asp-route-id="@item.Id"> <i class="fa-solid fa-pen-to-square"></i> </a></td>
                <td><a asp-action="Delete" asp-controller="Category" asp-route-id="@item.Id"> <i class="fa-solid fa-trash"></i> </a></td>
            </tr>
        }
      
    </tbody>
</table>